@using QPhotoM.Common
@model QPhotoM.Web.ViewModels.Posts.InputModels.PostEditInputModel
@{
    ViewData["Title"] = "Edit Post";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<h1 class="text-center">Edit an existing post in @GlobalConstants.SystemName</h1>
<hr class="my-4">

<div class="row">

    <div class="col-md-3">

    </div>
    <div class="col-md-6">

        <form class="w-30 mx-auto" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <div class="d-flex justify-content-center">
                    <label asp-for="@Model.Description" class="font-weight-bold"></label>
                </div>
                <textarea asp-for="@Model.Description" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <hr class="mt-3 hr-2" />

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Edit Post</button>
            </div>
        </form>
    </div>
</div>